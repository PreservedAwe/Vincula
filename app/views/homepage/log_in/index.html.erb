<main class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
      <div class="col-lg-7 text-center text-lg-start">
        <h1 class="display-4 fw-bold lh-1 text-body-emphasis mb-3">Sign In</h1>
        <p class="col-lg-10 fs-4">Login to your account from here</p>
      </div>
      <div class="col-md-10 mx-auto col-lg-5">
        <form class="p-4 p-md-5 border rounded-3 appSectionInner" action="/log_in" method="post">
          <%= render "shared/flash_messages" %>
          <div class="form-floating mb-3">
            <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" value="<%= session[:login_email] %>" required>
            <label class="text-dark" for="email">Email address</label>
          </div>
          <div class="form-floating mb-3">
            <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
            <label class="text-dark" for="password">Password</label>
          </div>
          <button class="w-100 btn btn-lg btn-outline-light" type="submit">Sign In</button>
          <hr class="my-4">
        </form>
      </div>
    </div>
  </main>