<%= render "shared/sidebar" %>
<div class="position-relative text-center overflow-scroll appSection">
  <div class="list-group appSectionInner">
    <% @searched_users.each do |user| %>   
      <a href="/connect_profile?username=<%= user.username %>" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
        <img src="<%= rails_blob_path(user.profile_picture) %>" alt="profile pic" width="32" height="32" class="rounded-circle flex-shrink-0">
        <div class="d-flex gap-2 w-100 justify-content-between">
          <div>
            <h6 class="mb-0"><%= user.username %></h6>
            <p class="mb-0 opacity-75">View Profile</p>
          </div>
          <small class="opacity-50 text-nowrap"></small>
        </div>
      </a>
    <% end %>
  </div>
</div>
